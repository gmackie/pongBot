#ifndef LCD_H_
#define LCD_H_

void drawCups(){
	uint8_t circ[6] = {0x7C, 0x03, 0x60, 0x60, 0x07, 0x01};
	MSS_UART_polled_tx( &g_mss_uart1, circ, sizeof(circ) );
	circ[2] = 0x70;
	MSS_UART_polled_tx( &g_mss_uart1, circ, sizeof(circ) );
	circ[2] = 0x80;
	MSS_UART_polled_tx( &g_mss_uart1, circ, sizeof(circ) );
	circ[2] = 0x90;
	MSS_UART_polled_tx( &g_mss_uart1, circ, sizeof(circ) );
	circ[2] = 0x68;
	circ[3] = 0x50;
	MSS_UART_polled_tx( &g_mss_uart1, circ, sizeof(circ) );
	circ[2] = 0x78;
	MSS_UART_polled_tx( &g_mss_uart1, circ, sizeof(circ) );
	circ[2] = 0x88;
	MSS_UART_polled_tx( &g_mss_uart1, circ, sizeof(circ) );
	circ[2] = 0x70;
	circ[3] = 0x40;
	MSS_UART_polled_tx( &g_mss_uart1, circ, sizeof(circ) );
	circ[2] = 0x80;
	MSS_UART_polled_tx( &g_mss_uart1, circ, sizeof(circ) );
	circ[2] = 0x78;
	circ[3] = 0x30;
	MSS_UART_polled_tx( &g_mss_uart1, circ, sizeof(circ) );
}

